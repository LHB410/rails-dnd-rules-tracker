<div class="container-fluid form-group">
  <div class="row justify-content-md-center">
    <div class="col-12 col-md-8" id="IBM-plex">
      <%= simple_form_for @rules_list do |f| %>
        <%= f.input :name, label: "Campaign Name" %>
        <%= f.input :description, label: "Short description of campaign", as: :text  %>
        <%= f.input :picture, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

